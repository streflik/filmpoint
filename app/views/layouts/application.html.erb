<!DOCTYPE html>
<html>
<head>
  <title>FilmpointBasic</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
    <ul>
      <% if user_signed_in? %>
          <li>Witaj <%=  current_user.first_name %></li>
          <li><%= link_to "Zmień hasło", password_user_path(current_user)%></li>
          <li><%= link_to "Wyloguj", destroy_user_session_path %></li>
      <% else %>
          <li><%= link_to_unless_current "Logowanie", new_user_session_path %></li>
      <% end %>
    </ul>
<p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
